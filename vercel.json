{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/(assets|docs|files)/.*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(.*\\.html)$",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}